<body style="background-image: url('https://c0.wallpaperflare.com/preview/1013/496/951/mockup-bakery-bread-pastry.jpg'); background-size: cover; background-repeat: no-repeat; background-attachment: fixed;">
    <!-- Content -->
    <partial name="_notification" />
    <div class="container-xxl" >
        <div class="authentication-wrapper authentication-basic container-p-y" >
            <div class="authentication-inner">
                <!-- Register -->
                <div class="card">
                    <div class="card-body">
                        <!-- Logo -->
                        <div class="justify-content-center">
                            <a href="#" class="text-nowrap logo-img text-center d-block  w-100">
                                <img src="~/assets/img/loglogo.png" width="150" alt="" />
                            </a>
                        </div>
                        <!-- /Logo -->

                        <form method="post" action="~/DangNhapDangKy/Signup">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label for="TenTK" class="form-label">Tên tài khoản</label>
                                <input type="text" class="form-control" id="TenTK" name="TenTK" aria-describedby="textHelp" maxlength="50" placeholder="Nhập tên tài khoản">
                                @Html.ValidationMessageFor(model => model.TenTK, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3 form-password-toggle">
                                <label for="MatKhau" class="form-label">Password</label>
                                <div class="input-group input-group-merge">
                                    <input type="password" class="form-control" id="MatKhau" name="MatKhau" maxlength="15" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7">
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                
                                
                                </div>
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="Email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email" aria-describedby="emailHelp" placeholder="nhập email">
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="SDT" class="form-label">SDT</label>
                                <input type="text" class="form-control" id="SDT" name="SDT" maxlength="11" placeholder="nhập số điện thoại">
                                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="DiaChi" class="form-label">Địa chỉ</label>
                                <input type="text" class="form-control" id="DiaChi" name="DiaChi" placeholder="nhập địa chỉ">
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Đăng ký</button>
                        </form>

                        <p class="text-center">
                            <span>Đã có tài khoản?</span>
                            <a href="~/DangNhapDangKy/Login">
                                <span>Đăng nhập</span>
                            </a>
                        </p>
                    </div>
                </div>
                <!-- /Register -->
            </div>
        </div>
    </div>

    <!-- / Content -->


    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <script src="/Admin/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="/Admin/assets/vendor/libs/popper/popper.js"></script>

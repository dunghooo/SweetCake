    <script type="text/javascript">
        $(document).ready(function () {
            $('.cart-btn').click(function (e) {
                e.preventDefault();
                var url = $(this).attr('href');
                $.post(url, function (data) {
                    if (data.itemCount != null) {
                        $('.cart-count').text(data.itemCount);
                    }
                });
            });
        });
    </script>
